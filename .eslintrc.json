{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true,
    "webextensions": true,
    "node": true
  },
  "plugins": [
    "css-modules"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:css-modules/recommended"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-console": [
      "warn",
      {
        "allow": [
          "log",
          "info",
          "warn",
          "error"
        ]
      }
    ],
    "no-alert": "warn",
    "no-unused-vars": "off",
    "css-modules/no-unused-class": [
      2,
      {
        "camelCase": true
      }
    ],
    "css-modules/no-undef-class": [
      2,
      {
        "camelCase": true
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
